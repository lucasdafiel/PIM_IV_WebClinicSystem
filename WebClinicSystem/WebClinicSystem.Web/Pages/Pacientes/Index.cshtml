@model List<Paciente>

@{
    ViewData["Title"] = "Gerenciamento de Pacientes";
}

<header class="pb-3 mb-4 border-bottom d-flex justify-content-between align-items-center">
    <h1>Gerenciamento de Pacientes</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#paciente-modal">
        <i class="bi bi-plus-circle-fill me-2"></i>Adicionar Novo Paciente
    </button>
</header>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="paciente-tabela">
                <thead class="table-light">
                    <tr>
                        <th>Nome Completo</th>
                        <th>CPF</th>
                        <th>Telefone</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var paciente in Model)
                    {
                        <tr>
                            <td>@paciente.NomeCompleto</td>
                            <td>@paciente.Cpf</td>
                            <td>@paciente.TelefoneContato</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-secondary me-1 btn-editar" title="Editar">
                                    <i class="bi bi-pencil-square"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger btn-excluir" title="Excluir">
                                    <i class="bi bi-trash-fill"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="paciente-modal" tabindex="-1" aria-labelledby="modal-titulo" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-titulo">Adicionar Novo Paciente</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="paciente-form">
                    <div class="mb-3">
                        <label for="nome-completo" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="nome-completo" name="NomeCompleto" required>
                    </div>
                    <div class="mb-3">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpf" name="Cpf" required>
                    </div>
                    <div class="mb-3">
                        <label for="data-nascimento" class="form-label">Data de Nascimento</label>
                        <input type="date" class="form-control" id="data-nascimento" name="DataNascimento" required>
                    </div>
                    <div class="mb-3">
                        <label for="telefone" class="form-label">Telefone</label>
                        <input type="tel" class="form-control" id="telefone" name="TelefoneContato" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" form="paciente-form">Salvar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const form = document.getElementById('paciente-form');
        const tabela = document.getElementById('paciente-tabela');
        const tabelaCorpo = tabela.querySelector('tbody');
        const modalElement = document.getElementById('paciente-modal');
        const modal = new bootstrap.Modal(modalElement);

        if (form) {
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                const nome = document.getElementById('nome-completo').value;
                const cpf = document.getElementById('cpf').value;
                const telefone = document.getElementById('telefone').value;

                const novaLinhaHtml = `
                    <tr>
                        <td>${nome}</td>
                        <td>${cpf}</td>
                        <td>${telefone}</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-outline-secondary me-1 btn-editar" title="Editar"><i class="bi bi-pencil-square"></i></button>
                            <button class="btn btn-sm btn-outline-danger btn-excluir" title="Excluir"><i class="bi bi-trash-fill"></i></button>
                        </td>
                    </tr>
                `;
                tabelaCorpo.insertAdjacentHTML('beforeend', novaLinhaHtml);
                form.reset();
                modal.hide();
            });
        }

        if (tabelaCorpo) {
            tabelaCorpo.addEventListener('click', function(event) {
                const botaoExcluir = event.target.closest('.btn-excluir');
                if (botaoExcluir) {
                    if (confirm('Tem certeza que deseja excluir este paciente?')) {
                        botaoExcluir.closest('tr').remove();
                    }
                }
            });
        }
    });
</script>
}