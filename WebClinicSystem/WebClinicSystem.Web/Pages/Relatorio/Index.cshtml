@* @{
    ViewData["Title"] = "Relatórios Gerenciais";
}

<header class="pb-3 mb-4 border-bottom">
    <h1>Relatórios Gerenciais</h1>
</header>

<div class="card shadow-sm mb-4">
    <div class="card-header">
        <h5 class="mb-0">Filtros para o Relatório</h5>
    </div>
    <div class="card-body">
        <form id="form-filtros">
            <div class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label for="data-inicio" class="form-label">Data Inicial</label>
                    <input type="date" class="form-control" id="data-inicio">
                </div>
                <div class="col-md-4">
                    <label for="data-fim" class="form-label">Data Final</label>
                    <input type="date" class="form-control" id="data-fim">
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel-fill me-2"></i>Gerar Relatório
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<section id="area-resultados">
    <div class="card shadow-sm">
        <div class="card-body text-center text-muted py-5">
            <i class="bi bi-graph-up-arrow" style="font-size: 3rem;"></i>
            <h5 class="mt-3">Selecione os filtros e clique em 'Gerar Relatório' para visualizar os dados.</h5>
        </div>
    </div>
</section>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const formFiltros = document.getElementById('form-filtros');
        const areaResultados = document.getElementById('area-resultados');

        formFiltros.addEventListener('submit', function(event) {
            event.preventDefault(); // Impede o recarregamento da página

            // Pega os valores dos filtros (aqui você poderia usar para buscar dados reais)
            const dataInicio = document.getElementById('data-inicio').value;
            const dataFim = document.getElementById('data-fim').value;

            console.log(`Gerando relatório de ${dataInicio} até ${dataFim}`);

            // --- SIMULAÇÃO DE DADOS (FRONT-END) ---
            // No mundo real, aqui você faria uma chamada para o back-end do seu amigo.
            // Para o nosso front-end, vamos apenas mostrar dados fixos.
            const dadosRelatorio = [
                { data: '2025-10-01', paciente: 'Carlos Pereira', status: 'Concluída' },
                { data: '2025-10-03', paciente: 'Mariana Lima', status: 'Concluída' },
                { data: '2025-10-05', paciente: 'Roberto Almeida', status: 'Cancelada' }
            ];

            const estatisticas = {
                total: 3,
                concluidas: 2,
                canceladas: 1
            };
            // --- FIM DA SIMULAÇÃO ---

            // Monta o HTML dos resultados
            const resultadosHtml = `
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="card text-center shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title text-muted">Total de Consultas</h5>
                                <p class="card-text fs-1 fw-bold">${estatisticas.total}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title text-muted">Consultas Concluídas</h5>
                                <p class="card-text fs-1 fw-bold text-success">${estatisticas.concluidas}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center shadow-sm h-100">
                            <div class="card-body">
                                <h5 class="card-title text-muted">Consultas Canceladas</h5>
                                <p class="card-text fs-1 fw-bold text-danger">${estatisticas.canceladas}</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm">
                    <div class="card-header"><h5 class="mb-0">Detalhes das Consultas</h5></div>
                    <div class="card-body">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr><th>Data</th><th>Paciente</th><th>Status</th></tr>
                            </thead>
                            <tbody>
                                ${dadosRelatorio.map(consulta => `
                                    <tr>
                                        <td>${new Date(consulta.data).toLocaleDateString('pt-BR', {timeZone: 'UTC'})}</td>
                                        <td>${consulta.paciente}</td>
                                        <td><span class="badge bg-${consulta.status === 'Concluída' ? 'success' : 'danger'}">${consulta.status}</span></td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                </div>
            `;

            // Substitui a mensagem inicial pelo HTML dos resultados
            areaResultados.innerHTML = resultadosHtml;
        });
    });
</script>
} *@