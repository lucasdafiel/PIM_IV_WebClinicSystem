@{
    ViewData["Title"] = "Painel";
}

<div class="mb-4">
    <h1>Painel</h1>
    <p class="text-muted">Olá! Bem-vindo(a) de volta. Aqui está um resumo do seu dia.</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Consultas Agendadas Hoje</h6>
                    <h2 class="fw-bold mb-0">0</h2>
                </div>
                <div class="stat-icon icon-blue">
                    <i class="bi bi-calendar-check"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Pacientes Atendidos</h6>
                    <h2 class="fw-bold mb-0">0</h2>
                </div>
                <div class="stat-icon icon-green">
                    <i class="bi bi-person-check"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Próxima Consulta</h6>
                    <h2 class="fw-bold mb-0">-</h2>
                </div>
                 <div class="stat-icon icon-green">
                    <i class="bi bi-clock"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-white border-0 pt-3">
        <h5>Consultas de Hoje</h5>
        <p class="text-muted small">visite sua agenda diária</p>
    </div>
    <div class="card-body text-center text-muted">
        <i class="bi bi-calendar-x" style="font-size: 2rem;"></i>
        <p class="mt-2 mb-0">Nenhuma consulta agendada</p>
        <small>Você está com a agenda livre para hoje.</small>
    </div>
</div>  