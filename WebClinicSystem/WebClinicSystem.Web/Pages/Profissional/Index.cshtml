@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Selecionando os elementos da página de Profissionais
        const form = document.getElementById('profissional-form');
        const tabela = document.getElementById('profissional-tabela');
        const tabelaCorpo = tabela.querySelector('tbody');
        const modalElement = document.getElementById('profissional-modal');
        const modal = new bootstrap.Modal(modalElement);

        // Lógica para ADICIONAR um novo profissional
        if (form) {
            form.addEventListener('submit', function (event) {
                event.preventDefault();
                const nome = document.getElementById('profissional-nome').value;
                const especialidade = document.getElementById('profissional-especialidade').value;

                const novaLinhaHtml = `
                    <tr>
                        <td>${nome}</td>
                        <td>${especialidade}</td>
                        <td class="text-center">
                            <button class="btn btn-sm btn-outline-secondary me-1 btn-editar" title="Editar"><i class="bi bi-pencil-square"></i></button>
                            <button class="btn btn-sm btn-outline-danger btn-excluir" title="Excluir"><i class="bi bi-trash-fill"></i></button>
                        </td>
                    </tr>
                `;
                tabelaCorpo.insertAdjacentHTML('beforeend', novaLinhaHtml);
                form.reset();
                modal.hide();
            });
        }

        // Lógica para EXCLUIR um profissional
        if (tabelaCorpo) {
            tabelaCorpo.addEventListener('click', function(event) {
                const botaoExcluir = event.target.closest('.btn-excluir');
                if (botaoExcluir) {
                    if (confirm('Tem certeza que deseja excluir este profissional?')) {
                        botaoExcluir.closest('tr').remove();
                    }
                }
            });
        }
    });
</script>
} *@